<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.myrippleapps.ABM"
	android:versionCode="2012"
	android:versionName="2.1.2">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_SUPERUSER" />

    <application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/Theme_Light">
        <activity 
			android:name="com.myrippleapps.ABM.activities.MainActivity"
			android:screenOrientation="portrait">
            <intent-filter>
                <action 
					android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			
        </activity>

        <activity 
			android:name="com.myrippleapps.ABM.activities.CheckSU"
			android:screenOrientation="portrait"/>
		<activity 
			android:name="com.myrippleapps.ABM.activities.getMyDataReady"
			android:screenOrientation="portrait"/>
        <activity 
			android:name="com.myrippleapps.ABM.activities.AppSettings"
			android:screenOrientation="portrait"/>
        <activity 
			android:name="com.myrippleapps.ABM.activities.Operations"
			android:screenOrientation="portrait"/>
		<activity 
			android:name="com.myrippleapps.ABM.activities.FlasherActivity" 
			android:screenOrientation="portrait"/>
		<activity
			android:name="com.myrippleapps.ABM.activities.TextEditor"
			android:launchMode="singleTop"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable"/>
		</activity>
		
		<provider
            android:name="com.myrippleapps.ABM.activities.SearchSuggestions"
            android:authorities="com.myrippleapps.authority" />
		
    </application>

</manifest>
